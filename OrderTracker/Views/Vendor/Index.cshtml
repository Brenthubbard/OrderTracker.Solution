
@using OrderTracker.Models;

@{
  Layout = "_Layout";
}

<h1>Vendors</h1>
<p>Click on a vendor to see current orders or to add new order to that vendor</p>
@if (@Model.Count == 0)
{
  <h3>No Vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendor/@vendor.Id'>Vendor name: @vendor.Name   Description: @vendor.Description</a></h3>
}
<p><a href='/vendor/@Model["vendor"].Id/orders/new'>Add another vendor</a></p>
<p><a href='/'>Back to home page</a></p>